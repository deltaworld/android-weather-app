<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:key="@string/pref_location_key"
        android:singleLine="true"
        android:title="@string/pref_location_label" />
    <ListPreference
        android:defaultValue="@string/pref_temperature_units_default"
        android:entries="@array/temperature_units"
        android:entryValues="@array/temperature_units"
        android:key="@string/pref_temperature_units_key"
        android:summary="@string/pref_temperature_units_default"
        android:title="@string/pref_temperature_units_label" />

</PreferenceScreen>